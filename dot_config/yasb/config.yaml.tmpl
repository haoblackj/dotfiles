# config.yaml.tmpl
watch_stylesheet: true
watch_config: true
debug: false
update_check: true

komorebi:
  {{- if eq .location "home" }}
  start_command: "komorebic start --config \"~\\.config\\komorebi\\komorebi.json\" --whkd"
  stop_command: "komorebic stop --whkd"
  reload_command: "komorebic stop --whkd && komorebic start --config \"~\\.config\\komorebi\\komorebi.json\" --whkd"
  {{- else }}
  # 職場では GlazeWM を使用するため Komorebi の自動起動は無効化（必要に応じて変更してください）
  # start_command: ""
  {{- end }}

bars:
  primary-bar:
    enabled: true
    screens: ["*"]
    class_name: "yasb-bar"
    alignment:
      position: "top"
      # 自宅は false (左詰め寄り)、職場は true (中央寄せ)
      center: {{ if eq .location "home" }}false{{ else }}true{{ end }}
    animation:
      enabled: true
      duration: 400
    blur_effect:
      enabled: false
      acrylic: false
      dark_mode: false
      round_corners: false
      round_corners_type: "normal"
      border_color: "system"
    window_flags:
      always_on_top: false
      windows_app_bar: true
    dimensions:
      width: "100%"
      height: 32
    padding:
      top: 4
      left: 4
      bottom: 0
      right: 4
    widgets:
      left:
      {{- if eq .location "home" }}
      - "komorebi_workspaces"
      - "komorebi_active_layout"
      - "whkd"
      {{- else }}
      - "glazewm_workspaces"
      - "glazewm_binding_mode"
      - "glazewm_tiling_direction"
      {{- end }}
      - "active_window"
      center:
      - "clock"
      right:
      {{- if eq .location "home" }}
      - "media"
      {{- end }}

widgets:
  # --- 共通ウィジェット ---
  home:
    type: "yasb.home.HomeWidget"
    options:
      label: "<span>\udb81\udf17</span>"
      menu_list:
      # ユーザー名の違いを .chezmoi.homeDir で吸収
      - { title: "User Home", path: {{ .chezmoi.homeDir | quote }} }
      - { title: "Download", path: {{ joinPath .chezmoi.homeDir "Downloads" | quote }} }
      - { title: "Documents", path: {{ joinPath .chezmoi.homeDir "Documents" | quote }} }
      - { title: "Pictures", path: {{ joinPath .chezmoi.homeDir "Pictures" | quote }} }
      system_menu: true
      power_menu: true
      blur: false

  active_window:
    type: "yasb.active_window.ActiveWindowWidget"
    options:
      label: "{win[title]}"
      label_alt: "[class_name='{win[class_name]}' exe='{win[process][name]}' hwnd={win[hwnd]}]"
      label_no_window: ""
      label_icon: true
      label_icon_size: 14
      max_length: 30
      max_length_ellipsis: "..."
      monitor_exclusive: true

  clock:
    type: "yasb.clock.ClockWidget"
    options:
      label: "{%Y/%m/%d (%a) %H:%M}"
      label_alt: "{%A, %d %B %Y %H:%M}"
      timezones: []
      calendar:
        blur: false
        round_corners: false
        alignment: "center"
        direction: "down"
      callbacks:
        on_left: "toggle_calendar"
        on_right: "toggle_label"

  volume:
    type: "yasb.volume.VolumeWidget"
    options:
      label: "<span>{icon}</span> {level}"
      label_alt: "{volume}"
      tooltip: false
      volume_icons: ["\ueee8", "\uf026", "\uf027", "\uf027", "\uf028"]
      callbacks:
        on_left: "toggle_mute"
        on_right: "exec cmd.exe /c start ms-settings:sound"

  # --- 自宅用 (Komorebi/Media) ---
  {{- if eq .location "home" }}
  komorebi_workspaces:
    type: "komorebi.workspaces.WorkspaceWidget"
    options:
      label_offline: "\u23fc Offline"
      label_workspace_btn: "\u000d"
      label_workspace_active_btn: "\u000d"
      label_workspace_populated_btn: "\u000d"
      label_default_name: "{index}"
      label_zero_index: false
      hide_empty_workspaces: true
      hide_if_offline: true
      animation: true

  komorebi_active_layout:
    type: "komorebi.active_layout.ActiveLayoutWidget"
    options:
      hide_if_offline: true
      label: "{icon}"
      layouts: ["bsp", "columns", "rows", "grid", "vertical_stack", "horizontal_stack", "ultrawide_vertical_stack", "right_main_vertical_stack"]
      layout_icons:
        bsp: "BSP"
        columns: "COLS"
        rows: "ROWS"
        grid: "GRID"
        vertical_stack: "V-STACK"
        horizontal_stack: "H-STACK"
        ultrawide_vertical_stack: "W-STACK"
        right_main_vertical_stack: "RMV-STACK"
        monocle: "MONOCLE"
        maximized: "MAX"
        floating: "FLOATING"
        paused: "PAUSED"
      callbacks:
        on_left: "next_layout"
        on_middle: "toggle_monocle"
        on_right: "prev_layout"

  whkd:
    type: "yasb.whkd.WhkdWidget"
    options:
      label: "<span>\uf11c</span>"
      special_keys:
        - { key: "win", key_replace: "\ue70f" }
        - { key: "ctrl", key_replace: "Ctrl" }
        - { key: "alt", key_replace: "Alt" }
        - { key: "shift", key_replace: "Shift" }
      label_shadow: { enabled: true, color: "black", radius: 3, offset: [1, 1] }

  media:
    type: "yasb.media.MediaWidget"
    options:
      label: "{title}"
      label_alt: "{artist} - {title}"
      show_thumbnail: true
      hide_empty: true
      icons:
        prev_track: "\udb81\udcae"
        next_track: "\udb81\udcad"
        play: "\udb81\udc0a"
        pause: "\udb80\udfe4"
  {{- end }}

  # --- 職場用 (GlazeWM/Notifications) ---
  {{- if eq .location "work" }}
  glazewm_workspaces:
    type: "glazewm.workspaces.GlazewmWorkspacesWidget"
    options:
      offline_label: "GWM Offline"
      hide_empty_workspaces: true
      hide_if_offline: true

  glazewm_tiling_direction:
    type: "glazewm.tiling_direction.GlazewmTilingDirectionWidget"
    options:
      horizontal_label: "\udb81\udce1"
      vertical_label: "\udb81\udce2"
      btn_shadow: { enabled: true, color: "black", radius: 3, offset: [1, 1] }

  glazewm_binding_mode:
    type: "glazewm.binding_mode.GlazewmBindingModeWidget"
    options:
      hide_if_no_active: true
      icons: { none: "", resize: "\uf071", pause: "\uf28c" }

  notifications:
    type: "yasb.notifications.NotificationsWidget"
    options:
      label: "<span>\uf476</span> {count}"
      hide_empty: true
  {{- end }}